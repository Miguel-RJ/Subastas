@model Subastas.Models.Propuesta

@{
    ViewData["Title"] = "Eliminar Propuesta";
}

<h1>Eliminar Propuesta</h1>

<h3>¿Estás seguro de querer eliminar esta propuesta?</h3>
<div>
    <h4>Propuesta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Título de la Propuesta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TituloPropuesta)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Elimiar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a tus Propuestas</a>
    </form>
</div>
