@model Subastas.Models.Usuario

@{
    ViewData["Title"] = "Detalles Usuario";
}

<h1>Detalles de Usuario</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label class="control-label">Rol</label>
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.RolID == 1)
                {
                    <label>Administrador</label>
                }
                else if (Model.RolID == 2)
                {
                    <label>PyME</label>
                }
                else
                {
                    <label>Consultoría</label>
                }
            }
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Usuario</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TagUsuario)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Nombre</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RFC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RFC)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Descripción</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar Usuario", "Edit", new { id = Model.ID }) |
    <a asp-action="Index">Regresar al listado de Usuarios</a>
</div>
