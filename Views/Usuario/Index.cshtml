@model IEnumerable<Subastas.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create">Crear Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Usuario
            </th>
            <th>
                Nombre
            </th>
            <th>
                Rol
            </th>
            <th>
                RFC
            </th>
            <th>
                Descripción
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TagUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreUsuario)
                </td>
                <td>
                    @{
                        if (item.RolID == 1)
                        {
                            <label>Administrador</label>
                        }
                        else if (item.RolID == 2)
                        {
                            <label>PyME</label>
                        }
                        else
                        {
                            <label>Consultoría</label>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RFC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
                    @Html.ActionLink("Detalles", "Details", new {id=item.ID}) |
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
