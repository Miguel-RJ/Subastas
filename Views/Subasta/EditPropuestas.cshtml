@model Subastas.Models.Propuesta

@{
    ViewData["Title"] = "Editar Estatus";
}

<h1>Editar Estatus</h1>

<h4>Propuesta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePropuesta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ID" class="form-control" type = "hidden" />
            </div>
            <div class="form-group">
                <input asp-for="SubastaID" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="UsuarioID" class="form-control" type = "hidden" />
            </div>
            <div class="form-group">
                <input asp-for="TituloPropuesta" class="form-control" type = "hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Descripcion" class="form-control" type = "hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="A">Aceptado</option>
                    <option value="R">Rechazado</option>
                    <option value="I">Interesado</option>
                    <option value="S">Sin Revisar</option>
                    <option value="T">Terminada</option>
                </select>                
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Grade" class="form-control"  type = "hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Regresar a Subastas", "Index", new { usuario=ViewBag.PyME  }) |
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
