@model Subastas.Models.Subasta

@{
    ViewData["Title"] = "Editar Subasta";
}

<h1>Editar Subasta</h1>

<h4>Subasta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" type="hidden">
                <input asp-for="UsuarioID" class="form-control" type="hidden"/>
                <span asp-validation-for="UsuarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" >Nombre del Proyecto</label>
                <input asp-for="NombreProyecto" class="form-control" />
                <span asp-validation-for="NombreProyecto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descripci√≥n</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group" type="hidden"> 
                <input asp-for="Grade" class="form-control" type="hidden"/>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group" type="hidden">
                <input asp-for="Status" class="form-control" type="hidden"/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar tus Subastas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
