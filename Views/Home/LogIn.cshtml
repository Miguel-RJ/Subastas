@model Subastas.Models.Propuesta

@{
    ViewData["Title"] = "Log In";
}

<h1>Editar Propuesta</h1>

<h4>Propuesta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ID" class="form-control" type="hidden" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="SubastaID" class="form-control" type="hidden" />
                <span asp-validation-for="SubastaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UsuarioID" class="form-control" type="hidden" />
                <span asp-validation-for="UsuarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Título de la Propuesa</label>
                <input asp-for="TituloPropuesta" class="form-control" />
                <span asp-validation-for="TituloPropuesta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descripción</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Status" class="form-control" type="hidden" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Grade" class="form-control" type="hidden" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a Tus Propuestas</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
